@model ChalupaHaj.Models.ReservationForm
@using ChalupaHaj.Models
@inject LanguageService language

<!--Reservation form-->
<form asp-action="Rezervace" class="contact-form green">

    <!--validation summary-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <!--name-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-jmeno")</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <!--surname-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-prijmeni")</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>


    <!--email-->
    <div class="form-group">
        <label asp-for="Email" class="control-label">@language.GetKey("form-email")</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <!--phone-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-Telefon")</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>


    <!--date of arrival-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-Prijezd")</label>
        <input asp-for="Arrival" class="form-control" />
        <span asp-validation-for="Arrival" class="text-danger"></span>
    </div>


    <!--date of departure-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-Odjezd")</label>
        <input asp-for="Departure" class="form-control" />
        <span asp-validation-for="Departure" class="text-danger"></span>
    </div>


    <!--number of persons-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-Pocet")</label>
        <input asp-for="NumberOfPersons" class="form-control" />
        <span asp-validation-for="NumberOfPersons" class="text-danger"></span>
    </div>


    <!--message-->
    <div class="form-group">
        <label class="control-label">@language.GetKey("form-Zprava")</label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>


    <!--send button-->
    <div class="greyBox">
        <input type="submit" value=@language.GetKey("reservation-form-Odeslat") class="btn btn-primary" />
    </div>


</form>